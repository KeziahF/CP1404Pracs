BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            on_text: app.calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.increment(input_miles.text, 1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.increment(input_miles.text, -1)
    #Button:
        #text: 'Convert miles to km'
        #font_size: 48
    Label:
        id: output_km
        text: '0.0'
        font_size: 48
        color: (1, 1, 0, 1)
